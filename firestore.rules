rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // User can read/write their own data
      allow read, write: if isOwner(userId);
      
      // Inventory subcollection
      match /inventory/{ingredientId} {
        allow read, write: if isOwner(userId);
      }
      
      // Shopping list subcollection
      match /shopping_list/{itemId} {
        allow read, write: if isOwner(userId);
      }
      
      // Recipes subcollection (cached from API)
      match /recipes/{recipeId} {
        allow read, write: if isOwner(userId);
      }
      
      // Preferences
      match /preferences/{prefId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Error logging - anyone can write, only admins can read
    match /errors/{errorId} {
      allow create: if isSignedIn();
      allow read: if false; // Only backend can read
    }
    
    // Public recipes collection (shared by all users)
    match /public_recipes/{recipeId} {
      allow read: if isSignedIn();
      allow write: if false; // Only backend can write
    }
    
    // Analytics collection
    match /analytics/{userId} {
      allow create, update: if isOwner(userId);
      allow read: if false; // Only backend can read
    }
    
    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}